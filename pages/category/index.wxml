<view class="cates">
    <SearchInput></SearchInput>
    <view class="cates_container">
        <!-- 左侧内容 -->
        <scroll-view scroll-y class="left_menu">
            <view class="menu_item {{index===currentIndex?'active':''}}" wx:for="{{leftList}}"
             wx:for-item="item" wx:key="*this"
            bindtap="onhandleItemTap" data-index="{{index}}">
                {{item}}
            </view>
        </scroll-view>
        <!-- 右侧内容 -->
        <scroll-view scroll-top="{{scrollTop}}" scroll-y class="right_content">
            <view class="goos_group" wx:for="{{rigthList}}" wx:for-item="item1" wx:key="cat_id">
                <!--头部内容 -->
                <view class="goods_title">
                    <text class="delimiter">/</text>
                    <text class="title">{{item1.cat_name}}</text>
                    <text class="delimiter">/</text>
                    <!-- 货物内容信息 -->
                </view>
                <view class="goods_list">
                    <navigator wx:for="{{item1.children}}" wx:for-item="item2" wx:key="cat_id">
                        <image src="{{item2.cat_icon}}" mode="widthFix" />
                        <view class="goods_name">{{item2.cat_name}}</view>
                    </navigator>
                </view>
            </view>
        </scroll-view>
    </view>
</view>