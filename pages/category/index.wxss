page {
  height: 100%;
}
.cates {
  height: 100%;
}
.cates .cates_container {
  height: calc( 100vh - 90rpx );
  display: flex;
}
.cates .cates_container .left_menu {
  flex: 2;
}
.cates .cates_container .left_menu .menu_item {
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  height: 80rpx;
}
.cates .cates_container .right_content {
  flex: 5;
}
.cates .cates_container .right_content .goos_group .goods_title {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
}
.cates .cates_container .right_content .goos_group .goods_title .delimiter {
  color: #ccc;
  padding: 0 10rpx;
}
.cates .cates_container .right_content .goos_group .goods_list {
  display: flex;
  flex-wrap: wrap;
}
.cates .cates_container .right_content .goos_group .goods_list navigator {
  padding: 10rpx;
  width: 33.33%;
  text-align: center;
  display: inline;
}
.cates .cates_container .right_content .goos_group .goods_list navigator image {
  width: 50%;
}
