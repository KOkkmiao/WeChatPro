<view class="backcolor">
    <!-- 购物车宝贝有多少 收货地址是哪里 -->
    <view class="good_detail">
        商品信息108件宝贝 收货地址是:qqqpqppqpq...
    </view>
    <!-- 商品内容 -->
    <!-- 商品背景色 -->
    <view class="good_backcolor">
        <view class="all_check">
            <checkbox bindcountAll="countAll">
            </checkbox>
        </view>
        <!-- 商品 -->
        <view class="goods_content" wx:for="{{goodsDetail}}" wx:key="goods_id">
            <view>
                <checkbox bindcountadd="countadd">
                </checkbox>
            </view>
            <navigator url="/pages/goods_detail/index?goods_id={{item.goods_id}}">
                <view class="image">
                    <image src="{{item.pics[0].pics_mid}}" mode="widthFix">
                    </image>
                </view>
                <view class="conent">
                    <view class="goods_up">
                        {{item.goods_name}}
                    </view>
                    <view class="goods_bottom">
                        <view class="good_price">
                            ￥{{item.goods_price}}
                        </view>
                        <view class="add_count">
                            <button disabled='{{item.num===1?true:false}}' catchtap="btnsub" data-index="{{index}}"
                                hover-stop-propagation="true" class="button-left">-</button>
                            <view class="number" catchtap="skipClick" hover-stop-propagation="true">{{item.num}}</view>
                            <button catchtap="btnadd" data-index="{{index}}" hover-stop-propagation="true"
                                class="button-right">+</button>
                        </view>
                    </view>
                </view>
            </navigator>
        </view>
    </view>

    <!-- 下标商品计算 -->
    <view class="good_backcolor_bottom">
        <view class="count_bottom">
            <view class="total_price">合计:￥0</view>
            <button>
                结算
            </button>

        </view>
    </view>
</view>